class Fade : ZilchComponent
{
    [Static]
    var Color:Real;
    
    function Initialize(init : CogInitializer)
    {
    }
    
    [Static]
    function StartFade(levelToLoad:Level, whatSpace:Space, object:Cog)
    {
        var seq = Action.Sequence(object.Actions);
        
        Action.Property
           (seq, @object.Sprite.Color, Real4(0,0,0,1), 1, Ease.Linear);
        whatSpace.LoadLevel(levelToLoad);
    }

}
